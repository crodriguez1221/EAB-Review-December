@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">

    <div class="row align-items-center">

        <div class="col-md-6 hero-text">
            <h1 class="mb-3">GET STARTED IN TECH TODAY</h1>

            <div class="progress-container">
                <div class="progress">
                    <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">
                        Track Your Progress
                    </div>
                </div>
            </div>

            <p class="hero-description">
                Welcome to Washington Vets 2 Tech, your pathway to success in the tech industry starts here. 
                Designed specifically for veterans and their families, our platform offers tailored entrance exams, 
                skills assessments, and study materials to help you navigate your transition into a technology career. 
                Explore multiple pathways, access certification practice tests, and gain the tools you need to 
                thrive in cybersecurity, server and cloud application, or cloud application development. Empower your 
                future today with Vets 2 Tech.
            </p>
        </div>

        <div class="col-md-6 text-center mt-4 mt-md-0">
            <div class="family-image">
                <img src="~/images/family_military.jpg" alt="Military family" />
                <a href="@Url.Action("Register", "Account")" class="btn btn-danger">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/images/image1.png" class="card-img-top" alt="Server Cloud Image" />
                <div class="card-body">
                    <h5 class="card-title">Server Cloud and Application</h5>
                    <p class="card-text">
                        Learn how to manage and deploy cloud applications.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/images/image2.png" class="card-img-top" alt="Cloud App Dev Image" />
                <div class="card-body">
                    <h5 class="card-title">Cloud Application Development</h5>
                    <p class="card-text">
                        Build modern applications with scalable cloud solutions.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/images/image3.png" class="card-img-top" alt="Cybersecurity Image" />
                <div class="card-body">
                    <h5 class="card-title">Cybersecurity Administration</h5>
                    <p class="card-text">
                        Protect systems and data with hands-on security practices.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
