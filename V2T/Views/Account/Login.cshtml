@model V2T.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="row m-0" style="min-height: 90vh;">
    <div class="col-md-6 d-none d-md-block p-0">
        <div class="h-100 w-100" 
             style="background: url('/images/login.jpg') no-repeat center center; 
                    background-size: cover;">
        </div>
    </div>

    <div class="col-md-6 d-flex align-items-center justify-content-center bg-v2t-red">
        <div class="p-3" style="max-width: 350px; width: 100%; background: #fff; border-radius: 8px;">
            <h2 class="text-center mb-4" style="color: var(--v2t-dark-gray);">Welcome Back!</h2>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <input asp-for="Email" class="form-control" placeholder="Email Address" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label fw-bold"></label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>

                <div class="text-end mt-2">
                    <a asp-action="ForgotPassword" class="text-decoration-underline" 
                       style="color: var(--v2t-dark-gray);">
                        Forgot Password?
                    </a>
                </div>

                <p class="mt-3 text-center" style="color: var(--v2t-dark-gray);">
                    Don’t have an account yet? 
                    <a asp-action="Register" class="text-decoration-underline" 
                       style="color: var(--v2t-dark-gray);">
                       Sign Up
                    </a>
                </p>
            </form>
        </div>
    </div>
</div>
